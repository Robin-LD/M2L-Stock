        <Button x:Name="Bt_FactureRetour" Content="Retour" HorizontalAlignment="Right" Margin="0,0,5,10" VerticalAlignment="Bottom" Width="70" RenderTransformOrigin="1.657,-1.5" FontFamily="Comic Sans MS"/>
