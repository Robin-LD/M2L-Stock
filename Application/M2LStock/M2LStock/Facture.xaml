            <DataGrid x:Name="DataG_Facture" Margin="10"/>
        </Grid>
        <Label Content="Recherche : " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,4,0,0"/>
        <TextBox x:Name="TextBlock_FactureRecherche" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="89,7,0,0"/>
        <Button Content="Go !" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Margin="214,7,0,0" Height="23" FontSize="14" FontWeight="Bold" FontFamily="Comic Sans MS"/>
        <Button x:Name="Bt_ImprimerFacture" Content="Imprimer" HorizontalAlignment="Right" Margin="0,61,10,0" VerticalAlignment="Top" Width="70"/>

    </Grid>
